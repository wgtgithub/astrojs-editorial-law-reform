---
const { title = 'Editorial by HTML5 UP', description = '' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/assets/css/fontawesome-all.min.css" is:inline/>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/assets/css/main.css" is:inline/>
  </head>
  <body class="is-preload">
    <div id="wrapper">
      <div id="main">
        <div class="inner">
          <slot name="header" />
          <slot />
        </div>
      </div>
      <slot name="sidebar" />
    </div>
    <script src="/assets/js/jquery.min.js" is:inline></script>
    <script src="/assets/js/browser.min.js" is:inline></script>
    <script src="/assets/js/breakpoints.min.js" is:inline></script>
    <script src="/assets/js/util.js" is:inline></script>
    <script src="/assets/js/main.js" is:inline></script>
  </body>
</html>
